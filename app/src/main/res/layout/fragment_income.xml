<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="8dp">
    <EditText
        android:id="@+id/incomeAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount" android:inputType="numberDecimal"/>
    <EditText
        android:id="@+id/incomeNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Note (e.g. 'paycheck', 'extra shift')"/>
    <Button
        android:id="@+id/addIncomeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Income"/>
    <ListView
        android:id="@+id/incomeList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>